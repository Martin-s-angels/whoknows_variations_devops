<p> register </p>

<h2>Register</h2>
<% if (error) %>
  <div class="error"><strong>Error:</strong> Even Frank would not know the error </div>
<% end %>

<form action="/api/register" method="POST">
    <label>Username: </label>
    <input type="text" name="username" size="30" value="tester"/>

    <label>Email: </label>
    <input type="email" name="email" size="30" value="email@email.com"/>

    <label>Password: </label>
    <input type="password" name="password" size="30" value="password"/>

    <label>Password: <small>(repeat)</small></label>
    <input type="password" name="password2" size="30" value="password"/>

    <button id="register-button" type="submit"> Sign Up </button>
</form>